<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_volume_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume Up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_volume_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume Down"
        app:layout_constraintLeft_toRightOf="@+id/btn_volume_up"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_brightness_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brightness Up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_volume_up" />

    <Button
        android:id="@+id/btn_brightness_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brightness Down"
        app:layout_constraintLeft_toRightOf="@+id/btn_brightness_up"
        app:layout_constraintTop_toBottomOf="@+id/btn_volume_up" />

    <Button
        android:id="@+id/btn_battery_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Info"
        app:layout_constraintLeft_toRightOf="@+id/btn_volume_down"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_fota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fota"
        app:layout_constraintLeft_toRightOf="@+id/btn_battery_status"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_force_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="force update"
        app:layout_constraintLeft_toRightOf="@+id/btn_fota"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_storage_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Storage Size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_brightness_up" />

    <Button
        android:id="@+id/btn_eye_production"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eye production"
        app:layout_constraintLeft_toRightOf="@+id/btn_storage_size"
        app:layout_constraintTop_toBottomOf="@+id/btn_brightness_up" />

    <Button
        android:id="@+id/btn_add_proximity_listener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加距离传感器监听器"
        app:layout_constraintLeft_toRightOf="@+id/btn_eye_production"
        app:layout_constraintTop_toBottomOf="@+id/btn_brightness_up" />

    <Button
        android:id="@+id/btn_get_display_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取屏幕尺寸"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_add_proximity_listener" />

    <Button
        android:id="@+id/btn_is_mouse_attached"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="鼠标是否连接"
        app:layout_constraintLeft_toRightOf="@id/btn_get_display_size"
        app:layout_constraintTop_toBottomOf="@id/btn_add_proximity_listener" />

    <ScrollView
        android:id="@+id/sv_text"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_get_display_size">

        <TextView
            android:id="@+id/text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
